# =============================================================================
# 白名单模式AI模板设置
# =============================================================================
# 白名单模式是否使用上面的AI_PROMPT_TEMPLATE（true=使用，false=使用专门的朋友聊天模式）
USE_CUSTOM_TEMPLATE_FOR_WHITELIST=false

# =============================================================================
# 关键词自动回复设置
# =============================================================================
# 关键词配置文件路径，包含预设的关键词和对应回复
# KEYWORD_RESPONSES_PATH=keyword_responses.json

# =============================================================================
# 数据管理设置
# =============================================================================
# 是否在每次重启时清空聊天记录（true=清空获取最新对话，false=保留历史记录）
CLEAR_DATA_ON_RESTART=true
