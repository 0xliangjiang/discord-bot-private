# 保存的聊天历史记录最大长度，超过会自动删除老记录
CHAT_HISTORY_MAX_LENGTH=20

# 是否在每次重启时清空聊天记录（true=清空获取最新对话，false=保留历史记录）
CLEAR_DATA_ON_RESTART=true

# 是否开启活跃度监控（true=检查频道活跃度，false=总是回复）
ENABLE_ACTIVITY_MONITOR=false

# 是否开启白名单模式（true=只回复白名单用户，false=回复所有人）
ENABLE_WHITELIST_MODE=true

# 同时运行的最大线程数，建议不超过账号数量
MAX_WORKERS=4

# 每次获取的消息数量限制（1-100）
MESSAGE_LIMIT=20

# 触发回复需要的最少活跃用户数，低于此数量则不回复
MIN_ACTIVE_USERS=5

# 回复延迟时间最大值（秒），与最小值组成随机延迟范围
REPLY_DELAY_MAX=11

# 回复延迟时间最小值（秒），避免回复太快被发现是机器人
REPLY_DELAY_MIN=5

# 机器人回复使用的语言
REPLY_LANGUAGE=中文

# 白名单模式是否使用上面的AI_PROMPT_TEMPLATE（true=使用，false=使用专门的朋友聊天模式）
USE_CUSTOM_TEMPLATE_FOR_WHITELIST=false

